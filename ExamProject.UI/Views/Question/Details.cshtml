@model Entities.Concrete.Question

@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ml-2">
    <h4>Soru Detayları</h4>
    <hr />
    <dl class="row">

         

        <dt class="col-sm-2">
            @Html.DisplayName("Sınav Adı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exam.ExamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Konu Adı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubCategory.SubCategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Soru Tipi")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionType)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayName("Soru Metni")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Doğru Cevap")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CorrectAnswer)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("A Şıkkı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionAnswer.Option1)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("B Şıkkı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionAnswer.Option2)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("C Şıkkı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionAnswer.Option3)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("D Şıkkı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionAnswer.Option4)
        </dd>





    </dl>
</div>
<div class="ml-1">
    <button class="btn btn-outline-warning"> <a asp-action="Edit" asp-route-id="@Model.QuestionId">Düzenle</a></button>
    <button class="btn btn-outline-secondary"> <a asp-action="Index">Listeye Dön</a></button>
</div>
