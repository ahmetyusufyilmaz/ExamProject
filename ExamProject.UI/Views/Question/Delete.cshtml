@model Entities.Concrete.Question

@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="ml-2">Soruyu silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row ml-1">
        <dt class = "col-sm-2">
            @Html.DisplayName("Soru Metni")
        </dt>
        <dd class = "col-sm-10">
           <span>@Model.QuestionText</span>
            @*@Html.DisplayFor(model => model.QuestionText)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Doğru Cevap")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorrectAnswer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Sınav Adı")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exam.ExamName)
        </dd class>
        <dt class="col-sm-2">
            @Html.DisplayName("Konu Adı")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubCategory.SubCategoryName)
        </dd class>
        <dt class="col-sm-2">
            @Html.DisplayName("Soru Tipi")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionType)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="ml-3">
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye dön</a>
    </form>
</div>
