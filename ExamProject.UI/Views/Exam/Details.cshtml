@model Entities.Concrete.Exam

@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h4 class="ml-2">Sınav Detayları</h4>
    <hr />
    <dl class="row ml-1">

        <dt class="col-sm-2">
            @Html.DisplayName("Ders Adı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Sınav Adı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Sınav Süresi")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Soru Sayısı")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfQuestions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Açıklama")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Başarı Notu")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SuccessGrade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Sınav Başlangıç Tarihi")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Sınav Bitiş Tarihi")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Aktiflik Durumu")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
</div>
<div class="ml-2">
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.ExamId }, new { @class = "btn btn-warning" }) |
    <button class="btn btn-outline-dark"> @Html.ActionLink("Listeye dön", "Index")</button>
</div>
