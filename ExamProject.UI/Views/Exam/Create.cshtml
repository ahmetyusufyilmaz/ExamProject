@model Entities.Concrete.Exam

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4 style="margin-left:10px">Yeni Sınav Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="margin-left:10px">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="ExamName" class="control-label"><b>Sınav Adı</b></label>
                <input asp-for="ExamName" class="form-control" />
                <span asp-validation-for="ExamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"><b>Sınav Süresi</b></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfQuestions" class="control-label"><b>Soru Sayısı</b></label>
                <input asp-for="NumberOfQuestions" class="form-control" />
                <span asp-validation-for="NumberOfQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"><b>Sınav Açıklaması</b></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuccessGrade" class="control-label"><b>Başarı Notu</b></label>
                <input asp-for="SuccessGrade" class="form-control" />
                <span asp-validation-for="SuccessGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"><b>Başlangıç Tarihi</b></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"><b>Bitiş Tarihi</b></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> <b>@Html.DisplayName("Aktiflik Durumu")</b>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"><b>Kategori ID</b></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-left:10px">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
